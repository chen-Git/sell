border-1px($color)
  position: relative
  &:after
    position: absolute
    left: 0
    bottom: 0
    border-top: 1px solid $color
    width: 100%
    content: ' '

border-none()
  &:after
    display: none

bg-image($url)
  background-image: url($url+'@2x.png')
  @media(-webkit-min-device-piexl-ratio:3),(min-device-piexl-ratio:3)
    background-img: url($url+'@3x.png')
